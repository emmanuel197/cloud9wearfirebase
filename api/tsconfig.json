{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },
    "typeRoots": ["../node_modules/@types"],
    "types": ["express", "node"],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../server/**/*.ts"
  ],
  "exclude": ["node_modules"]
} 